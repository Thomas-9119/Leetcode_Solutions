class Solution {
public:
    int maxCoins(vector<int>& piles) {
        int n = piles.size();
        sort(begin(piles), end(piles));
        int result = 0;
        int BOB = 0;
        int ME = n - 2;
        int ALICE = n - 1;

        while (ME > BOB) {
            result += piles[ME];
            ME -= 2;
            BOB++;
            ALICE -= 2;
        }
        return result;
    }
};
