class Solution {
public:
    string addSpaces(string s, vector<int>& spaces) {
        int m = s.length();
        int n = spaces.size();
        int j = 0;
        string result;
        result.reserve(m + n);
        for (int i = 0; i < m; i++) {
            if (j < n && i == spaces[j]) {
                result += " ";
                j++;
            }
            result += s[i];
        }
        return result;
    }
};
